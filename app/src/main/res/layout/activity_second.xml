<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#EF1212"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:elevation="30dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Thêm các thành phần vào LinearLayout -->
                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_arrow_back_24"
                    android:contentDescription="" />

                <TextView
                    android:id="@+id/textViewTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thong tin chi tiet"
                    android:layout_marginStart="8dp"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </Toolbar>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@id/toolbar2"
            android:layout_margin="20dp"
            android:id="@+id/Frame1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@android:color/transparent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/custom_card">
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    app:cardCornerRadius="50dp"
                    android:layout_margin="10dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2">


                    <!-- TextView MONAN -->
                    <TextView
                        android:id="@+id/tvNameMonAn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginVertical="10dp"
                        android:layout_marginTop="20dp"
                        android:text="Ten Mon An"
                        android:textSize="17dp"
                        android:textStyle="bold" />


                    <!-- TextView bổ sung 1 -->
                    <TextView
                        android:id="@+id/tvGiaTien"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvNameMonAn"
                        android:layout_alignParentStart="true"
                        android:layout_margin="3dp"
                        android:text="12000d"
                        android:textSize="15dp"
                        android:textColor="#EF1212" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tvGiaTien"
                        android:layout_below="@+id/tvNameMonAn"
                        android:text="15000"
                        android:layout_marginLeft="100dp"
                        android:layout_marginTop="3dp"
                        android:textSize="15dp" />

                    <RatingBar
                        android:id="@+id/start"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/tvGiaTien"
                        android:numStars="5"
                        android:rating="3"
                        android:scaleX="0.4"
                        android:scaleY="0.4"/>




                    <!-- TextView bổ sung 2 -->
                </RelativeLayout>

            </LinearLayout>

        </FrameLayout>

    </RelativeLayout>

</FrameLayout>
